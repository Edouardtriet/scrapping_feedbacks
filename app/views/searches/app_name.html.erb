<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card border-0 shadow-sm">
        <div class="card-body p-4 p-md-5">
          <h1 class="fw-bold mb-3 text-center">Analyze App Reviews</h1>
          <p class="text-center mb-5">Enter app details to get comprehensive review analysis and insights</p>

          <%= simple_form_for @search, url: wizard_path, method: :put do |f| %>
            <% if @search.errors.any? %>
              <div class="alert alert-danger">
                <h4><%= pluralize(@search.errors.count, "error") %> prohibited this search from being saved:</h4>
                <ul>
                  <% @search.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <%= f.input :app_name,
                        label: "App Name",
                        label_html: { class: "fw-medium mb-2" },
                        placeholder: "e.g. Instagram, TikTok, Spotify",
                        input_html: { class: "form-control-lg" },
                        required: true,
                        wrapper_html: { class: "mb-4" } %>

            <div class="d-flex justify-content-end">
              <%= f.button :submit, "Next", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
