<div class="container py-4">
  <div class="app-details mb-5">
    <div class="d-flex align-items-center mb-4">
      <% if @app.icon_url.present? %>
        <img src="<%= @app.icon_url %>" alt="<%= @app.name %>" width="80" height="80" class="me-4 rounded">
      <% else %>
        <div class="app-icon-placeholder me-4"></div>
      <% end %>

      <div>
        <h1 class="mb-1"><%= @app.name %></h1>
        <p class="text-muted mb-0"><%= @app.developer %></p>
      </div>
    </div>

    <%= link_to "Analyze Reviews", countries_search_path(@app), class: "btn btn-primary" %>
  </div>
</div>
