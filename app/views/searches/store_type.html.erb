<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card border-0 shadow-sm">
        <div class="card-body p-4 p-md-5">
          <h1 class="fw-bold mb-3 text-center">Select App Store</h1>
          <p class="text-center mb-5">Choose the app store for your analysis</p>

          <%= simple_form_for @search, url: wizard_path, method: :put do |f| %>
            <% if @search.errors.any? %>
              <div class="alert alert-danger">
                <h4><%= pluralize(@search.errors.count, "error") %> prohibited this search from being saved:</h4>
                <ul>
                  <% @search.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <%= f.input :store_type,
                        label: "App Store",
                        label_html: { class: "fw-medium mb-2" },
                        collection: [
                          ["Apple App Store", "apple"],
                          ["Google Play Store", "google"],
                          ["Both", "both"]
                        ],
                        include_blank: false,
                        input_html: { class: "form-select-lg" },
                        wrapper_html: { class: "mb-4" } %>

            <%= f.input :apple_id,
                      label: "Apple App Store ID",
                      label_html: { class: "fw-medium mb-2" },
                      hint: "Enter the Apple App Store ID (e.g., id1234567890 for Spotify)",
                      input_html: { class: "form-control-lg" },
                      wrapper_html: { class: "mb-4" } %>

            <%= f.input :google_id,
                      label: "Google Play Store ID",
                      label_html: { class: "fw-medium mb-2" },
                      hint: "Enter the Google Play Store ID (e.g., com.spotify.music for Spotify)",
                      input_html: { class: "form-control-lg" },
                      wrapper_html: { class: "mb-4" } %>

            <div class="d-flex justify-content-between">
              <%= f.button :submit, "Previous", name: "previous", class: "btn btn-secondary btn-lg" %>
              <%= f.button :submit, "Next", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
