<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card border-0 shadow-sm">
        <div class="card-body p-4 p-md-5">
          <h1 class="fw-bold mb-3 text-center">Select Timeframe</h1>
          <p class="text-center mb-5">Choose the date range for your app review analysis</p>

          <%= simple_form_for @search, url: wizard_path, method: :put do |f| %>
            <% if @search.errors.any? %>
              <div class="alert alert-danger">
                <h4><%= pluralize(@search.errors.count, "error") %> prohibited this search from being saved:</h4>
                <ul>
                  <% @search.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="row mb-4">
              <div class="col-md-6">
                <%= f.input :start_date,
                            label: "Start Date",
                            label_html: { class: "fw-medium mb-2" },
                            as: :date,
                            html5: true,
                            input_html: { class: "form-control-lg" } %>
              </div>
              <div class="col-md-6">
                <%= f.input :end_date,
                            label: "End Date",
                            label_html: { class: "fw-medium mb-2" },
                            as: :date,
                            html5: true,
                            input_html: { class: "form-control-lg" } %>
              </div>
            </div>

            <div class="d-flex justify-content-between">
              <%= f.button :submit, "Previous", name: "previous", class: "btn btn-secondary btn-lg" %>
              <%= f.button :submit, "Start Analysis", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
