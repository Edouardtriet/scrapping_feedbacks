<div class="container py-4">
  <h1 class="mb-4">Search Results</h1>

  <%= link_to "Back to Home", root_path, class: "btn btn-outline-secondary mb-4" %>

  <% if @apps.present? %>
    <div class="apps-list mt-4">
      <% @apps.each do |app| %>
        <div class="app-card mb-3 p-3 border rounded">
          <div class="d-flex align-items-center">
            <% if app.icon_url.present? %>
              <img src="<%= app.icon_url %>" alt="<%= app.name %>" width="60" height="60" class="me-3 rounded">
            <% else %>
              <div class="app-icon-placeholder me-3" style="width: 60px; height: 60px;"></div>
            <% end %>

            <div>
              <h3 class="mb-1"><%= link_to app.name, search_path(app) %></h3>
              <p class="text-muted mb-0"><%= app.developer %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info mt-5">
      No apps found matching "<%= params[:query] %>". Try a different search term.
    </div>
  <% end %>
</div>
