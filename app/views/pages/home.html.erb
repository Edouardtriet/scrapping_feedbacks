<div class="container-fluid px-4 py-3">
  <!-- Main content -->
  <div class="container main-container mt-5 text-center">
    <div class="row justify-content-center">
      <div class="col-lg-10">
        <!-- Hero section -->
        <h1 class="display-5 fw-bold mb-3">Analyze App Reviews with AI</h1>
        <p class="lead mb-5">
          Gain valuable insights from thousands of user reviews. Understand what users love, what they hate, and what they want from your app - all in seconds.
        </p>

        <!-- Search bar -->
        <%= simple_form_for :search, url: searches_path, method: :post do |f| %>
          <div class="search-container mb-5">
            <div class="position-relative search-wrapper w-100">
              <div class="search-icon position-absolute">
                <i class="fas fa-search"></i>
              </div>
              <%= f.input :app_name,
                          label: false,
                          placeholder: "Make your first analysis",
                          input_html: {
                            class: "form-control form-control-lg search-input ps-5"
                          } %>
              <%= f.button :submit, "Analyze", class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>


        <!-- Features section -->
        <div class="row features-section mt-5 pt-4">
          <!-- Feature 1: Analyze Sentiment -->
          <div class="col-md-4 mb-4 mb-md-0">
            <div class="feature">
              <div class="feature-icon-wrapper mb-4 mx-auto">
                <div class="feature-icon-bg sentiment-icon-bg d-flex align-items-center justify-content-center">
                  <i class="fas fa-chart-bar"></i>
                </div>
              </div>
              <h3 class="feature-title mb-3">Analyze Sentiment</h3>
              <p class="feature-description">
                Understand how users feel about competitor's apps across different countries from online reviews.
              </p>
            </div>
          </div>

          <!-- Feature 2: Discover Insights -->
          <div class="col-md-4 mb-4 mb-md-0">
            <div class="feature">
              <div class="feature-icon-wrapper mb-4 mx-auto">
                <div class="feature-icon-bg insights-icon-bg d-flex align-items-center justify-content-center">
                  <i class="fas fa-lightbulb"></i>
                </div>
              </div>
              <h3 class="feature-title mb-3">Discover Insights</h3>
              <p class="feature-description">
                See what features people love, and what they want to be improved
              </p>
            </div>
          </div>

          <!-- Feature 3: Take Action -->
          <div class="col-md-4">
            <div class="feature">
              <div class="feature-icon-wrapper mb-4 mx-auto">
                <div class="feature-icon-bg action-icon-bg d-flex align-items-center justify-content-center">
                  <i class="fas fa-rocket"></i>
                </div>
              </div>
              <h3 class="feature-title mb-3">Take Action</h3>
              <p class="feature-description">
                Make data-driven decisions to make a better version than your competitors
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
